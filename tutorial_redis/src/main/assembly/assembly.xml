        <dependencySet>
            <unpack>false</unpack>
            <useProjectArtifact>true</useProjectArtifact>
            <outputDirectory>lib</outputDirectory>
            <scope>provided</scope>
        </dependencySet>
        <dependencySet>
            <unpack>false</unpack>
            <useProjectArtifact>true</useProjectArtifact>
            <outputDirectory>lib</outputDirectory>
            <scope>system</scope>
        </dependencySet>
        <dependencySet>
            <unpack>false</unpack>
            <useProjectArtifact>true</useProjectArtifact>
            <outputDirectory>lib</outputDirectory>
            <scope>runtime</scope>
        </dependencySet>
    </dependencySets>-->
    <dependencySets>
        <!-- 項目的依賴包 -->
        <dependencySet>
            <outputDirectory>lib</outputDirectory><!-- 依賴jar包放置目錄-->
            <useProjectArtifact>true</useProjectArtifact> <!-- 當前項目構件是否包含在這個依賴集合裏 -->
        </dependencySet>
    </dependencySets>

</assembly>
